@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero -->
<section class="bg-dark text-light text-center p-5">
    <h1>Hello, I'm <span class="text-warning">Your Name</span></h1>
    <p class="lead">Backend Developer | Problem Solver | Tech Enthusiast</p>
</section>


<!-- About -->
<section id="about" class="container py-5">
    <div class="row align-items-center">
        <div class="col-md-4 text-center">
            <img src="https://via.placeholder.com/200" class="rounded-circle img-fluid" alt="Profile Picture">
        </div>
        <div class="col-md-8">
            <h2>About Me</h2>
            <p>
                I’m a backend developer with experience in Python, Node.js, and databases.
                I enjoy building efficient and scalable applications.
            </p>
        </div>
    </div>
</section>


<!-- Skills -->
<section id="skills" class="bg-light py-5">
    <div class="container">
        <h2 class="text-center">Skills</h2>
        <div class="row text-center mt-4">
            <div class="col-md-3"><i class="bi bi-code-slash fs-1"></i><p>Python</p></div>
            <div class="col-md-3"><i class="bi bi-server fs-1"></i><p>Databases</p></div>
            <div class="col-md-3"><i class="bi bi-cloud fs-1"></i><p>APIs</p></div>
            <div class="col-md-3"><i class="bi bi-git fs-1"></i><p>Git/GitHub</p></div>
        </div>
    </div>
</section>


<!-- Projects -->
<section id="projects" class="container py-5">
    <h2 class="text-center">Projects</h2>
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <img src="https://via.placeholder.com/400x200" class="card-img-top" alt="Project 1">
                <div class="card-body">
                    <h5 class="card-title">Project One</h5>
                    <p class="card-text">A short description of the project.</p>
                    <a href="#" class="btn btn-primary">View on GitHub</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="https://via.placeholder.com/400x200" class="card-img-top" alt="Project 2">
                <div class="card-body">
                    <h5 class="card-title">Project Two</h5>
                    <p class="card-text">Another project description.</p>
                    <a href="#" class="btn btn-primary">View on GitHub</a>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Contact -->
<section id="contact" class="bg-dark text-light text-center py-5">
    <h2>Contact Me</h2>
    <p>Email: <a href="mailto:you@example.com" class="text-warning">you@example.com</a></p>
    <p>
        <a href="https://github.com/yourusername" class="text-light me-3">GitHub</a>
        <a href="https://linkedin.com/in/yourusername" class="text-light">LinkedIn</a>
    </p>
</section>
